<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.eaw1805.data.model.Game" table="GAMES">
        <cache usage="read-write"/>
        <id name="gameId" column="GAME_ID">
            <generator class="assigned"/>
        </id>

        <property name="scenarioId"/>
        <property name="turn"/>
        <property name="dateStart"/>
        <property name="dateLastProc"/>
        <property name="dateNextProc"/>
        <property name="status"/>
        <property name="schedule"/>
        <property name="cronSchedule"/>
        <property name="cronScheduleDescr"/>
        <property name="ended"/>
        <property name="winners"/>
        <property name="coWinners"/>
        <property name="runnerUp"/>
        <property name="discount"/>
        <property name="forumId" column="forum_id"/>
        <property name="description"/>
        <property name="userId"/>
        <property name="bet"/>
        <property name="betSharing"/>
        <property name="fieldBattle"/>
        <property name="randomEvents"/>
        <property name="fogOfWar"/>
        <property name="privateGame"/>
        <property name="vpsToJoin"/>
        <property name="name" type="text"/>
        <property name="type"/>
        <property name="boostedTaxation"/>
        <property name="boostedProduction"/>
        <property name="fastPopulationGrowth"/>
        <property name="boostedCAPoints"/>
        <property name="fierceCasualties"/>
        <property name="fastAppointmentOfCommanders"/>
        <property name="extendedArrivalOfCommanders"/>
        <property name="fullMpsAtColonies"/>
        <property name="alwaysSummerWeather"/>
        <property name="fastShipConstruction"/>
        <property name="extendedEspionage"/>
        <property name="fastFortressConstruction"/>
        <property name="rumorsEnabled"/>
        <property name="doubleCostsArmy"/>
        <property name="doubleCostsNavy"/>
    </class>
</hibernate-mapping>
